{#
Params:
name = Name of the Field
value = Value of the Field
class = CSS Class for the element
fieldid = ID of the field
nodiv = no DIV wrap
divclass = CSS Class for the Div Container
label = Label before the input
placeholder = Placeholder Text
disable = disable the field
help = help text
#}

{% if fieldid is not defined %}
    {% set fieldid = name %}
{% endif %}

{% if nodiv is not defined %}<div class="{{ global.ui_input }}{% if divclass is defined %} {{ divclass }}{% endif %}">{% endif %}
{% if label is defined %}   <label for="{{ fieldid }}">{{ label }}</label>{% endif %}
    <input name="{{ name }}" {% if value is defined %}value="{{ value }}" {% endif %}{% if placeholder is defined %} placeholder="{{ placeholder }}"{% endif %} id="{{ fieldid }}" class="{{ global.input }}{% if class is defined %} {{ class }}{% endif %}" type="text" />
{% if help is defined %}   <span class="help-block">{{ help }}</span>{% endif %}
{% if nodiv is not defined %}</div>{% endif %}




